@using BusinessLayer.Dictionaties
@using BusinessLayer.Views
@using Entity.Models.General

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var components = (List<ComponentView>)ViewData["Components"];
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Documents</h5>
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <table id="footer-search" class="table table-striped table-bordered nowrap">

                        <thead>
                            <tr>
                                <th>Store</th>
                                <th>Part. №</th>
                                <th>Description</th>
                                <th>Serial №</th>
                                <th>State</th>
                                <th>Status</th>
                                <th>Location</th>
                                <th>Facility</th>
                                <th>Current</th>
                                <th>Should be</th>
                                <th>Qty in</th>
                                <th>Supplier</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>

                        <tbody>


                            <div class="modal fade" id="large-Modal" tabindex="-1" role="dialog" style="display: none; z-index: 1050;" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div id="dialogContent" class="modal-content">

                                    </div>
                                </div>
                            </div>

                            @foreach (var str in components)
                            {
                                <tr>
                                    <td>@str.ParentStore.StoreName  </td>
                                    <td>@str.PartNumber</td>
                                    <td>@str.Description</td>
                                    <td>@str.SerialNumber</td>
                                    <td>@str.State</td>
                                    <td>@str.Status</td>
                                    <td>@str.Location?.FullName</td>
                                    <td>@str.Location?.LocationsType.FullName</td>
                                    <td>1</td>
                                    <td>@(str.ShouldBeOnStock > 0 ? "Yes" : "No")</td>
                                    <td>@str.QuantityIn</td>
                                    <td>@str.Supplier</td>
                                    <td>@str.Remarks</td>
                                   


                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Store</th>
                                <th>Part. №</th>
                                <th>Description</th>
                                <th>Serial №</th>
                                <th>State</th>
                                <th>Status</th>
                                <th>Location</th>
                                <th>Facility</th>
                                <th>Current</th>
                                <th>Should be</th>
                                <th>Qty in</th>
                                <th>Supplier</th>
                                <th>Remarks</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

