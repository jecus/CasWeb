@using BusinessLayer.Views

@{
    ViewData["Title"] = "ComponentModels";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var model = (List<ComponentModelView>)ViewData["ComponentModels"];
}

<div class="card">
    <div class="card-header">
        <h5>Component Models</h5>
    </div>
    <div class="card-block">
        <div class="dt-responsive table-responsive">
            <table id="footer-search" class="table table-striped table-bordered nowrap">
                <thead>
                    <tr>
                        <th> </th>
                        <th>Name</th>
                        <th>Reference</th>
                        <th>Series</th>
                        <th>Part Number</th>
                        <th>Alt Part Number</th>
                        <th>Description</th>
                        <th>Manufacturer</th>
                        <th>Code</th>
                        <th>Description Rus</th>
                        <th>Class</th>
                        <th>ATA</th>
                        <th>Cost new</th>
                        <th>Cost OH</th>
                        <th>Cost Serv.</th>
                        <th>Remarks</th>
                        <th>Effectivity</th>
                        <th>IsDangerous</th>
                        @*<th>Signer</th>*@
                    </tr>
                </thead>
                <tbody>

                    <div class="modal fade" id="large-Modal" tabindex="-1" role="dialog" style="display: none; z-index: 1050;" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div id="dialogContent" class="modal-content">

                            </div>
                        </div>
                    </div>

                    @foreach (var mod in model)
                    {
                        <tr>
                            <td>

                                @*<a href=@Url.Action("Modal", "Document", new {id = spec.Id}) , class="modalLargeBtn btn waves-effect waves-dark btn-primary btn-outline-primary btn-icon">
                                        <i class="fa fa-pencil"></i>
                                    </a>*@

                                @*@Html.ActionLink("", "Modal", "Document", new { id = spec.Id}, new { @class = "modalLargeBtn btn waves-effect waves-dark btn-danger btn-outline-danger btn-icon" })*@
                            </td>
                            <td>@mod.Model</td>
                            <td>@mod.Reference</td>
                            <td>@mod.SubModel</td>
                            <td>@mod.PartNumber</td>
                            <td>@mod.AltPartNumber</td>
                            <td>@mod.Description</td>
                            <td>@mod.Manufacturer</td>
                            <td>@mod.Code</td>
                            <td>@mod.DescRus</td>
                            <td>@mod.ComponentClass</td>
                            <td>@mod.AtaChapter</td>
                            <td>@mod.CostNew</td>
                            <td>@mod.CostOverhaul</td>
                            <td>@mod.CostServiceable</td>
                            <td>@mod.Remarks</td>
                            <td>@mod.IsEffectivity</td>
                            <td>@mod.IsDangerous</td>
                            @* <td>@equip.Signer</td>*@
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th> </th>
                        <th>Name</th>
                        <th>Reference</th>
                        <th>Series</th>
                        <th>Part Number</th>
                        <th>Alt Part Number</th>
                        <th>Description</th>
                        <th>Manufacturer</th>
                        <th>Code</th>
                        <th>Description Rus</th>
                        <th>Class</th>
                        <th>ATA</th>
                        <th>Cost new</th>
                        <th>Cost OH</th>
                        <th>Cost Serv.</th>
                        <th>Remarks</th>
                        <th>Effectivity</th>
                        <th>IsDangerous</th>
                        @*<th>Signer</th>*@
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

