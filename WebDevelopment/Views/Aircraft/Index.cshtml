@using BusinessLayer
@using BusinessLayer.Views
@using Entity.Models
@{
    ViewBag.Title = "title";
    Layout = "_AircraftLayout";
    var aircraft = (AircraftView)ViewData["Aircraft"];
    var baseComponents = (List<BaseComponentView>)ViewData["BaseComponents"];
    var oper = (Operator)ViewData["Operator"];
    var apuFlightMinutesList = new List<int> { 0, 20, 30, 40 };
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Aircraft Dashboard</h5>
            </div>
            <div class="card-block accordion-block color-accordion-block">
                <div class="color-accordion" id="color-accordion">
                    <a class="z-depth-top-0 accordion-msg b-none waves-effect waves-light">>Aircraft General</a>
                    <div class="accordion-desc">
                        <p>
                            <form>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Aircraft Model</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.Model.FullName" readonly>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Owner</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.Owner" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Serial Number</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.SerialNumber" readonly>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Operator</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@oper.Name" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Registration Number</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.RegistrationNumber" readonly>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Variable Number</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.VariableNumber" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Aircraft Type Certificate №</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.TypeCertificateNumber" readonly>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Line Number</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.LineNumber" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">MSG</label>
                                    <div class="col-sm-4">
                                        <select class="custom-select custom-select-sm">
                                            <option selected>@aircraft.MSG</option>

                                            @foreach (object o in Enum.GetValues(typeof(MSG)).Cast<MSG>().Where(msg => msg != MSG.Unknown).Distinct())
                                            {
                                                <option value="@o">@o</option>
                                            }

                                        </select>
                                    </div>
                                    <label class="col-sm-2 col-form-label">APU Util.(FH/APUFH)</label>
                                    <div class="col-sm-4">
                                        <select class="form-control">
                                            <option selected>@aircraft.ApuUtizationPerFlightinMinutes</option>
                                            @foreach (int value in apuFlightMinutesList)
                                            {
                                                <option>@value</option>
                                            }

                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Manufacture Date</label>
                                    <div class="col-sm-4">
                                        <input class="form-control" type="date" value="08.08.1993" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Start</label>
                                    <div class="col-sm-4">
                                        <input class="form-control" type="date" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Today</label>
                                    <div class="col-sm-4">
                                        <input class="form-control" type="date" />
                                    </div>
                                </div>


                            </form>
                        </p>
                    </div>

                    @foreach (var baseComponentType in baseComponents.OrderBy(i => i.BaseComponentType.ShortName).GroupBy(i => i.BaseComponentType.ShortName))
                    {
                        <a class="z-depth-top-0 accordion-msg bg-dark-primary b-none waves-effect waves-light">
                            >@baseComponentType.Key
                        </a>
                        <div class="accordion-desc">
                            <form>
                                <div class="row">
                                    @foreach (var baseComponent in baseComponentType)
                                    {


                                        <div class="z-depth-top-4 p-t-30 m-r-20 col-sm-3">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Engine Model</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" placeholder="@baseComponent.Model.FullName" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Manufacturer</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" placeholder="@baseComponent.Manufacturer" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Position</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" placeholder="@baseComponent.Position" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Serial Number</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" placeholder="@baseComponent.SerialNumber" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Part Number</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" placeholder="@baseComponent.PartNumber" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">TSN/CSN</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" placeholder="You can't change me" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Manufacture Date</label>
                                                <div class="col-sm-8">
                                                    <input class="form-control" type="date" />
                                                </div>
                                            </div>
                                        </div>


                                    }
                                </div>
                            </form>
                        </div>
                    }


                        <a class="z-depth-top-0 accordion-msg b-none waves-effect waves-light">>Interior Configuration</a>
                    <div class="accordion-desc">
                        <p>
                            <form>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Cockpit Seating</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.CockpitSeating" readonly>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Oven</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.Oven" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Galleys</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.Galleys" readonly>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Boiler</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.Boiler" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Lavatory</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.Lavatory" readonly>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Air Stair Doors</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.AirStairDoors" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Seating Economy</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.SeatingEconomy" readonly>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Seating Business</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="@aircraft.SeatingBusiness" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Seating First</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" placeholder="@aircraft.SeatingFirst" readonly>
                                </div>
                                </div>
                                    
                            </form>
                        </p>
                    </div>

                    <a class="z-depth-top-0 accordion-msg bg-darkest-primary b-none waves-effect waves-light">
                        Other
                    </a>
                    <div class="accordion-desc">
                        <p>
                            other
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
