@using BusinessLayer.Views
@using Entity.Extentions
@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var documents = (List<DocumentView>) ViewData["Documents"];
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Documents</h5>
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <table id="footer-search" class="table table-striped table-bordered nowrap">

                        <thead>
                        <tr>
                            <th>File</th>
                            <th>Type</th>
                            <th>Title</th>
                            <th>№</th>
                            <th>Id №</th>
                            <th>Description</th>
                            <th>Issue</th>
                            <th>№ Issue</th>
                            <th>Valid To</th>
                            @*<th>Remain</th>*@
                            <th>Rev.Date</th>
                            <th>№ Rev.</th>
                            <th>Valid To</th>
                            @*<th>Remain</th>*@
                            <th>Department</th>
                            <th>Responsible</th>
                            <th>Service Type</th>
                            <th>Aboard</th>
                            <th>Privy</th>
                            <th>Nomenclature</th>
                            <th>Location</th>
                            <th>Prolongation</th>
                            @*<th>Contractor</th>
                            <th>Status</th>*@
                            <th>Remark</th>
                        </tr>
                        </thead>

                        <tbody>


                        <div class="modal fade" id="large-Modal" tabindex="-1" role="dialog" style="display: none; z-index: 1050;" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div id="dialogContent" class="modal-content">

                                </div>
                            </div>
                        </div>

                        @foreach (var doc in documents)
                        {
                            <tr>
                                <td>
                                    @if (@doc.ItemFileLink != null)
                                    {
                                        <button class="btn waves-effect waves-dark btn-danger btn-outline-danger btn-icon" value="@doc.ItemFileLink?.FileId" onclick="location.href = '@Url.Action("OpenPdf", "File", new {fileId = @doc.ItemFileLink.FileId})'">
                                            <i class="fa fa-file-pdf-o"></i>
                                        </button>

                                    }
                                    else
                                    {
                                        <button class="btn waves-effect waves-dark btn-disabled btn-outline-danger btn-icon disabled"><i class="fa fa-file-pdf-o"></i></button>
                                    }
                                    
                                </td>
                                <td>@doc.DocumentType</td>
                                <td>@doc.DocumentSubType.Name</td>
                                <td>@doc.ContractNumber</td>
                                <td>@doc.IdNumber</td>
                                <td>@doc.ShortDescription</td>
                                <td>@doc.IssueDateValidFrom.ToShortDateString()</td>
                                <td>@doc.IssueNumber</td>
                                <td>@doc.IssueDateValidTo.ToShortDateString()</td>
                                @*<td>Remain</td>*@
                                <td>@doc.RevisionDateFrom.Value.ToShortDateString()</td>
                                <td>@doc.RevNumber</td>
                                <td>@doc.IssueDateValidTo.ToShortDateString()</td>
                                @*<td>@doc.Remain</td>*@
                                <td>@doc.Department.FullName</td>
                                <td>@doc.ResponsibleOccupation.FullName</td>
                                <td>@doc.ServiceType.FullName</td>
                                <td>@doc.Aboard.ToYesNo()</td>
                                <td>@doc.Privy.ToYesNo()</td>
                                <td>@doc.Nomenсlature.FullName</td>
                                <td>@doc.Location.FullName</td>
                                <td>@doc.ProlongationWay</td>
                                @*<td>@doc.</td>
                                <td>@doc.</td>*@
                                <td>@doc.Remarks</td>

                            </tr>
                        }

                        </tbody>
                        <tfoot>
                        <tr>
                            <th>File</th>
                            <th>Type</th>
                            <th>Title</th>
                            <th>№</th>
                            <th>Id №</th>
                            <th>Description</th>
                            <th>Issue</th>
                            <th>№ Issue</th>
                            <th>Valid To</th>
                            @*<th>Remain</th>*@
                            <th>Rev.Date</th>
                            <th>№ Rev.</th>
                            <th>Valid To</th>
                            @*<th>Remain</th>*@
                            <th>Department</th>
                            <th>Responsible</th>
                            <th>Service Type</th>
                            <th>Aboard</th>
                            <th>Privy</th>
                            <th>Nomenclature</th>
                            <th>Location</th>
                            <th>Prolongation</th>
                            @*<th>Contractor</th>
                                  <th>Status</th>*@
                            <th>Remark</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>