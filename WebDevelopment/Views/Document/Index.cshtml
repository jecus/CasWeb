@using BusinessLayer
@using BusinessLayer.Views
@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var documents = (List<DocumentView>) ViewData["Documents"];
    var modalUrl = @Url.Action("Modal", "Document", new {id = "_DOCID_"});
    var fileUrl = @Url.Action("OpenPdf", "File", new {fileId = "_FILEID_" });
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Documents</h5>
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <table id="footer-search" class="table table-striped table-bordered nowrap">

                        <thead>
                            <tr>
                                <th>  </th>
                                <th>Title </th>
                                <th>№ Doc</th>
                                <th>Description</th>
                                <th>Issue</th>
                                <th>№ Issue</th>
                                <th>Valid To</th>
                                <th>Rev.Date</th>
                                <th>№ Rev.</th>
                                <th>Valid To</th>

                            </tr>
                        </thead>

                        <tbody>


                            <div class="modal fade" id="large-Modal" tabindex="-1" role="dialog" style="display: none; z-index: 1050;" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div id="dialogContent" class="modal-content">

                                    </div>
                                </div>
                            </div>

                            @foreach (var doc in documents)
                            {
                                <tr>
                                    <td>
                                        <a href=@modalUrl.Replace("_DOCID_", doc.Id.ToString()) , class="modalLargeBtn btn waves-effect waves-dark btn-primary btn-outline-primary btn-icon">
                                            <i class="fa fa-pencil"></i>
                                        </a>

                                        <button class="btn waves-effect waves-dark btn-danger btn-outline-danger btn-icon">
                                            <i class="fa fa-times"></i>
                                        </button>
                                        @if (@doc.ItemFileLink != null)
                                        {
                                            <button class="btn waves-effect waves-dark btn-danger btn-outline-danger btn-icon" value="@doc.ItemFileLink?.FileId" onclick="location.href = '@fileUrl.Replace("_FILEID_", doc.ItemFileLink.FileId?.ToString())'">
                                                <i class="fa fa-file-pdf-o"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn waves-effect waves-dark btn-disabled btn-outline-danger btn-icon disabled"><i class="fa fa-file-pdf-o"></i></button>
                                        }

                                    </td>
                                    <td>@doc.DocumentSubType.Name</td>
                                    <td>@doc.ShortContractNumber</td>

                                    <td>@doc.ShortDescription</td>
                                    <td><span style="display: none">@doc.IssueDateValidFrom.ToUniversalFilterString()</span>@doc.IssueDateValidFrom.ToUniversalString()</td>
                                    <td>@doc.IssueNumber</td>
                                    <td><span style="display: none">@doc.IssueDateValidTo.ToUniversalFilterString()</span>@doc.IssueDateValidTo.ToUniversalString()</td>

                                    <td><span style="display: none">@doc.RevisionDateFrom.ToUniversalFilterString()</span>@doc.RevisionDateFrom.ToUniversalString()</td>
                                    <td>@doc.RevNumber</td>
                                    <td><span style="display: none">@doc.IssueDateValidTo.ToUniversalFilterString()</span>@doc.IssueDateValidTo.ToUniversalString()</td>


                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>  </th>
                                <th>Title</th>
                                <th>№ Doc</th>
                                
                                <th>Description</th>
                                <th>Issue</th>
                                <th>№ Issue</th>
                                <th>Valid To</th>
                                
                                <th>Rev.Date</th>
                                <th>№ Rev.</th>
                                <th>Valid To</th>
                                </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>