@using Kendo.Mvc.UI
@using WebDevelopment.Helper
@using WebDevelopment.Infrastructude
@model List<BusinessLayer.Views.WorkPackageRecordView>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AircraftLayout.cshtml";
}

    <div class="card">
        <div class="card-header">
            <h5>Work Package</h5>
        </div>
        <div class="card-block">
            @(Html.Kendo().Grid(Model)
                  .Name("Grid")
                  .Columns(columns =>
                  {
                      //columns.Bound(p => p.Task.Type).Title("Type").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.AtaChapterView).Title("ATA").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.Title).Title("Title").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.Description).Title("Description").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.FirstPerformance).Title("Performance").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.RepeatInterval).Title("Rpt. Intv.").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.WorkType).Title("Work Type").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.NDT).Title("NDT").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.PerfDate).Title("Perf. Date").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.MH).Title("MH").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.KMH).Title("K*MH").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);
                      columns.Bound(p => p.Task.Cost).Title("Cost").Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(200);

                  })
                  .ToolBar(tools => tools.Excel())
                  .Excel(excel => excel
                      .FileName("WorkPackageRecord.xlsx")
                      .Filterable(true)
                      .AllPages(true)
                      .ProxyURL(Url.Action("ExcelExport", "Excel"))
                  )
                  .Scrollable(scrollable => scrollable.Height(550))
                  .Reorderable(reorderable => reorderable.Columns(true))
                  .Resizable(resizable => resizable.Columns(true))
                  .Pageable()
                  .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                  .Sortable()
                  .Groupable()
                  .ColumnMenu()
                  .DataSource(dataSource => dataSource
                      .Ajax()
                      .Group(i => i.Add(c => c.Task.Type))
                      .PageSize(250)
                      .ServerOperation(false)
                      .Read(read => read.Action("", ""))
                  ))

        </div>
    </div>

