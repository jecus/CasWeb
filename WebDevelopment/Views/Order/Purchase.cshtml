@using BusinessLayer.Views

@{
    ViewData["Title"] = "Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var purchase = (List<PurchaseOrderView>)ViewData["PurchaseOrders"];
}

<div class="card">
    <div class="card-header">
        <h5>Purchase Orders</h5>
    </div>
    <div class="card-block">
        <div class="dt-responsive table-responsive">
            <table id="footer-search" class="table table-striped table-bordered nowrap">
                <thead>
                    <tr>
                        <th> </th>
                        <th>Order No</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Opening Date</th>
                        <th>Publishing Date</th>
                        <th>Closing Date</th>
                        <th>Author</th>
                        <th>Published By</th>
                        <th>Closed By</th>
                        <th>Remark</th>
                        @*<th>Signer</th>*@
                    </tr>
                </thead>
                <tbody>

                    <div class="modal fade" id="large-Modal" tabindex="-1" role="dialog" style="display: none; z-index: 1050;" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div id="dialogContent" class="modal-content">

                            </div>
                        </div>
                    </div>

                    @foreach (var p in purchase)
                    {
                        <tr>
                            <td>

                                @*<a href=@Url.Action("Modal", "Document", new {id = spec.Id}) , class="modalLargeBtn btn waves-effect waves-dark btn-primary btn-outline-primary btn-icon">
                                        <i class="fa fa-pencil"></i>
                                    </a>*@

                                @*@Html.ActionLink("", "Modal", "Document", new { id = spec.Id}, new { @class = "modalLargeBtn btn waves-effect waves-dark btn-danger btn-outline-danger btn-icon" })*@
                            </td>
                            <td>@p.Number</td>
                            <td>@p.Title</td>
                            <td>@p.Description</td>
                            <td>@p.OpeningDate</td>
                            <td>@p.PublishingDate</td>
                            <td>@p.ClosingDate</td>
                            <td>@p.Author</td>
                            <td>@p.PublishedByUser</td>
                            <td>@p.CloseByUser</td>
                            <td>@p.Remarks</td>
                            @*<td>@init.</td>*@
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th> </th>
                        <th>Order No</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Opening Date</th>
                        <th>Publishing Date</th>
                        <th>Closing Date</th>
                        <th>Author</th>
                        <th>Published By</th>
                        <th>Closed By</th>
                        <th>Remark</th>
                        @*<th>Signer</th>*@
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
