<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class=""><img src="~/images/scatlogo.png" /></i>

                <div class="d-inline">
                    <h5>Air Company SCAT JSC</h5>
                    <span>Continuing Airworthiness System</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">MAIN PAGE</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-4 col-md-6">
        <div class="card prod-p-card text-white" style="background: linear-gradient(to top, #005b86, #027eb8)">
